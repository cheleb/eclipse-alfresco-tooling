<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="alfrescoResourceBuilder"
         name="Alfresco Resource Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.eclipse.alfresco.publisher.core.builder.AlfrescoResourceBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="alfrescoNature"
         name="Alfresco Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.alfresco.publisher.core.builder.AlfrescoNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.alfresco.publisher.core.alfrescoResourceBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="org.eclipse.alfresco.publisher.core.contribution1"
            nameFilter="*"
            objectClass="org.eclipse.core.resources.IProject">
         <action
               class="org.eclipse.alfresco.publisher.core.builder.ToggleNatureAction"
               enablesFor="+"
               icon="icons/AlfrescoLogo16.png"
               id="org.eclipse.alfresco.publisher.core.addRemoveNatureAction"
               label="Add/Remove Alfresco Nature"
               menubarPath="additions">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="org.eclipse.alfresco.publisher.core.contribution"
            objectClass="org.eclipse.core.resources.IProject">
         <menu
               id="org.eclipse.alfresco.publisher.core.menu"
               label="Alfresco"
               path="additions">
            <separator
                  name="deploy">
            </separator>
         </menu>
         <action
               class="org.eclipse.alfresco.publisher.core.popup.actions.DeployJar"
               enablesFor="1"
               id="org.eclipse.alfresco.publisher.core.action.deployJar"
               label="Deploy Jar"
               menubarPath="org.eclipse.alfresco.publisher.core.menu/deploy">
         </action>
         <action
               class="org.eclipse.alfresco.publisher.core.popup.actions.CleanDeployJar"
               enablesFor="1"
               id="org.eclipse.alfresco.publisher.core.action.deployJar"
               label="Clean Deploy Jar"
               menubarPath="org.eclipse.alfresco.publisher.core.menu/deploy">
         </action>
          <action
               class="org.eclipse.alfresco.publisher.core.popup.actions.DeployAmp"
               enablesFor="1"
               id="org.eclipse.alfresco.publisher.core.action.deployAmp"
               label="Deploy AMP"
               menubarPath="org.eclipse.alfresco.publisher.core.menu/deploy">
         </action>
         <action
               class="org.eclipse.alfresco.publisher.core.popup.actions.CleanDeployAmp"
               enablesFor="1"
               id="org.eclipse.alfresco.publisher.core.action.deployAmp"
               label="Clean Deploy AMP"
               menubarPath="org.eclipse.alfresco.publisher.core.menu/deploy">               
         </action>
         <filter
               name="projectNature"
               value="org.eclipse.alfresco.publisher.core.alfrescoNature">
         </filter>
      </objectContribution>
   </extension>
  
   <extension
         point="org.eclipse.m2e.core.projectConfigurators">
      <configurator
            class="org.eclipse.alfresco.publisher.core.configurator.AlfrescoProjectConfigurator"
            id="org.eclipse.alfresco.publisher.core.configurator.alfrescoProjectConfigurator">
      </configurator>
   </extension>
   <extension
         point="org.eclipse.m2e.core.lifecycleMappingMetadataSource">
   </extension>
  
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.alfresco.publisher.core.commands.category"
            name="Alfresco">
      </category>
      <command
            categoryId="org.eclipse.alfresco.publisher.core.commands.category"
            id="org.eclipse.alfresco.publisher.core.commands.alfrescoDeployCommand"
            name="Alfresco Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.alfresco.publisher.core.handlers.AlfrescoDeployHandler"
            commandId="org.eclipse.alfresco.publisher.core.commands.alfrescoDeployCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.alfresco.publisher.core.commands.alfrescoDeployCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="SHIFT+CTRL+p">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.eclipse.alfresco.publisher.core.menus.alfrescoMenu"
               label="Alfresco"
               mnemonic="M">
            <command
                  commandId="org.eclipse.alfresco.publisher.core.commands.alfrescoDeployCommand"
                  id="org.eclipse.alfresco.publisher.core.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.eclipse.alfresco.publisher.core.toolbars.sampleToolbar">
            <command
                  commandId="org.eclipse.alfresco.publisher.core.commands.alfrescoDeployCommand"
                  icon="icons/AlfrescoLogo16.png"
                  id="org.eclipse.alfresco.publisher.core.toolbars.sampleCommand"
                  tooltip="Reload webscript">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
